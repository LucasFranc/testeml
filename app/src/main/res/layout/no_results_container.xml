<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative_no_results"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/img_no_results"
        android:layout_centerHorizontal="true"
        android:text="@string/ops"
        android:textStyle="bold"
        android:textSize="@dimen/twenty_four_sp"
        android:layout_marginBottom="@dimen/pattern_margin"
        android:textColor="@color/black"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/img_no_results"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/img_no_results"/>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_find_no_results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/we_find_no_results_sorry_for_that"
        android:layout_below="@id/img_no_results"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/pattern_margin"
        android:textSize="@dimen/txt_size"
        android:textColor="@color/black"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_go_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:background="@color/colorPrimary"
        android:layout_below="@id/txt_find_no_results"
        android:layout_margin="@dimen/pattern_margin"
        android:text="@string/go_back"/>




</RelativeLayout>